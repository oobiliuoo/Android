<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">

    <TextView
        android:id="@+id/register_tv_tel"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="电话号码："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_et_tel"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:inputType="phone"
        app:layout_constraintLeft_toRightOf="@id/register_tv_tel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_tv_name"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="姓      名："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_tv_tel" />


    <EditText
        android:id="@+id/register_et_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/register_tv_tel"
        app:layout_constraintTop_toBottomOf="@id/register_et_tel" />

    <TextView
        android:id="@+id/register_tv_gender"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="性      别："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_tv_name" />



    <RadioGroup
        android:id="@+id/register_rg_gender"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/register_tv_name"
        app:layout_constraintTop_toBottomOf="@id/register_et_name"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/register_rg_man"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="男"
            />
        <RadioButton
            android:id="@+id/register_rg_woman"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="女"
            />
    </RadioGroup>


    <TextView
        android:id="@+id/register_tv_pwd"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="密      码："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_tv_gender" />


    <EditText
        android:id="@+id/register_et_pwd"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@id/register_tv_gender"
        app:layout_constraintTop_toBottomOf="@id/register_rg_gender" />

    <TextView
        android:id="@+id/register_tv_pwd2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="确认密码："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_tv_pwd" />


    <EditText
        android:id="@+id/register_et_pwd2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@id/register_tv_pwd"
        app:layout_constraintTop_toBottomOf="@id/register_et_pwd" />


    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_et_pwd2"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>