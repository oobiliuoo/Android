<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MineFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/mine_et_ip"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:hint="ip"
        android:text="192.168.43.239"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mine_et_port"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:hint="port"
        android:text="8080"
        app:layout_constraintBottom_toBottomOf="@+id/mine_et_ip"
        app:layout_constraintStart_toEndOf="@+id/mine_et_ip" />

    <Button
        android:id="@+id/mine_btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="连接"
        app:layout_constraintBottom_toBottomOf="@+id/mine_et_port"
        app:layout_constraintStart_toEndOf="@+id/mine_et_port" />

    <EditText
        android:id="@+id/mine_et_send"
        android:layout_width="246dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:hint="发送的msg"
        app:layout_constraintStart_toStartOf="@+id/mine_et_ip"
        app:layout_constraintTop_toBottomOf="@+id/mine_et_ip" />

    <Button
        android:id="@+id/minr_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="send"
        app:layout_constraintBottom_toBottomOf="@+id/mine_et_send"
        app:layout_constraintStart_toEndOf="@+id/mine_et_send" />

</androidx.constraintlayout.widget.ConstraintLayout>